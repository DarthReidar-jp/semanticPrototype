doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/display.css')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
  body
    header
      .container.row
        a.col-2.btn.btn-success(href='/create') New Memo
        form.col-8.search-form(method="GET", action="/display/search")
          .input-group
            input.form-control(type="text", name="query", placeholder="Search memos...")
            .input-group-append
              button.btn.btn-primary(type="submit") Search
        if memos && memos.length > 0
          button.btn.btn-warning.col-2(type="button" onclick="addAllMemosToFolder()") Add All to Folder         
        

    .container-fluid
      .row
        // サイドバー
        .col-md-2.sidebar
          .sidebar-content
            a.btn.btn-primary(href='/display') View Memos
            ul.list-group
              if folders && folders.length > 0
                each folder in folders
                  li.list-group-item
                    a(href=`/display/folders/${folder._id}`) #{folder.name}
              else
                li.list-group-item フォルダがありません

            // JSONインポートフォーム
            h2 Import Memos
            form(method="POST", action="/display/import", enctype="multipart/form-data")
              .form-group
                input.form-control(type="file", name="jsonFile", accept=".json")
              button.btn.btn-primary(type="submit") Import

        // メインコンテンツ
        .col-md-10.main-content
          .row
            .col-md-12
              // メモカード一覧
              .row
                if memos.length
                  each memo in memos
                    .col-lg-3.col-md-4.col-sm-6.mb-4
                      .card.h-100.d-flex.flex-column
                        .card-body
                          h5.card-title= memo.title
                          p.card-text.flex-fill(style='overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical;')= memo.content
                          if memo.score 
                            p.card-text Score: #{memo.score.toFixed(5)}
                          a.stretched-link(href=`/detail/${memo._id}`)
                else
                  .col-12
                    p No memos found.
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")
    script(src="/javascripts/display.js")
